@model College

<form class="row g-3" asp-controller="College" asp-action="Delete" method="post">
  <div class="col-md-4">
    <label asp-for="Name" class="form-label"></label>    
    <h4>@Model.Name</h4>
  </div>

 <div class="col-md-4">
    <label asp-for="EstablishedDate" class="form-label"></label>
    <h4>@Model.EstablishedDate</h4>
    </div>

  <div class="col-md-4">
    <label asp-for="Rank" class="form-label"></label>    
    <h4>@Model.Rank</h4>
  </div>

  <div class="col-12">
    <label asp-for="Address" class="form-label"></label>    
    <h4>@Model.Address</h4>
  </div>

  <div class="col-12">
    <label asp-for="Description" class="form-label"></label>    
    <h4>@Model.Description</h4>
  </div>
  
  <div class="col-12">
    <a href="/college/index" class="btn-primary">Cancel</a>
    <button type="submit" class="btn btn-danger">Delete</button>
  </div>
</form>